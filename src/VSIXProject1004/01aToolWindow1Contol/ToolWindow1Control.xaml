<UserControl x:Class="VSIXProject1004.ToolWindow1Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="802" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
		<StackPanel Orientation="Vertical">
			<Grid>
				<StackPanel Orientation="Horizontal">
					<Button Content="Init" Click="InitButton_Click"  Height="20" Name="InitButton" Background="LightPink" Width="50" />
					<Button Content="Start" Click="button1_Click"  Height="20" Name="button1" Background="LightBlue" Width="300" />
				</StackPanel>
			</Grid>
			
			<ScrollViewer x:Name="ScrollingViewer02" Background="#FF6594D6" Height="635">
				<StackPanel x:Name="ScrollingViewer01" Orientation="VerTical" HorizontalAlignment="Left" />
			</ScrollViewer>
		</StackPanel>
    </Grid>
</UserControl>
